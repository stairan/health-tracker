# Application Settings
APP_NAME=Health Tracker
APP_VERSION=1.0.0
DEBUG=False

# Database
DATABASE_DIR=/data

# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:5173

# Security
# IMPORTANT: Change this to a random secret key in production!
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ENCRYPTION_KEY=  # Leave empty to auto-generate from SECRET_KEY

# Garmin Sync
GARMIN_SYNC_ENABLED=True
GARMIN_SYNC_TIME=00:30  # Daily sync time (HH:MM format, 24-hour)

# Export
EXPORT_DIR=/data/exports
