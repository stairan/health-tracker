# Application Settings
APP_NAME=Health Tracker
APP_VERSION=1.0.0
DEBUG=False

# Database
DATABASE_DIR=./data

# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-something-random
ENCRYPTION_KEY=  # Leave empty to auto-generate from SECRET_KEY

# Garmin Sync
GARMIN_SYNC_ENABLED=True
GARMIN_SYNC_TIME=00:30  # Daily sync time (HH:MM format, 24-hour)

# Export
EXPORT_DIR=./data/exports
